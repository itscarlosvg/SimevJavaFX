<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.*?>

<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.LogInController" prefWidth="400" prefHeight="300" stylesheets="@estilos.css">
    <children>
        <VBox spacing="20" alignment="CENTER">
            <Label text="Bienvenido" styleClass="titulo-login" />

            <TextField fx:id="usuarioField" promptText="Usuario" styleClass="campo-texto" />
            <PasswordField fx:id="contrasenaField" promptText="Contraseña" styleClass="campo-texto" />

            <Button fx:id="loginButton" text="Iniciar Sesión" styleClass="boton-login" onAction="#handleLoginButtonAction" />
        </VBox>
    </children>
</StackPane>
